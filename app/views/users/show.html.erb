<%= render partial: "layouts/platform_navbar" %>

<div class="container">

  <h4>Hi <%= @user.email %></h4>

  <% if user_signed_in? %>
    <p><%= button_to "Request to create a new restaurant", new_restaurant_path, method: 'get', class:"btn btn-primary btn-lg"%></p>
  <% end %>

  <table>
    <thead>
      <th>Restaurant</th>
      <th>Status</th>
      <th>Price</th>
      <th>Date</th>
    </thead>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.restaurant.name %></td>
        <td><%= order.status %></td>
        <td><%= order.total_price %></td>
        <td><%= order.updated_at %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= render partial: "layouts/platform_footer" %>
