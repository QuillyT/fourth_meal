<div class="masthead">
  <h3 class="text-muted"><%= link_to image_tag(current_restaurant.logo_url), home_path(current_restaurant) %></h3>
  <ul class="nav nav-justified navbar navbar">
    <li class="active"><%= link_to "Menu", home_path(current_restaurant) %></li>
    <li><%= link_to "My Orders", orders_path(current_restaurant) %></li>
    <li><%= link_to "Cart", cart_path(current_restaurant)%></li>
    <% if user_signed_in? %>
      <li><%= link_to "Logout", logout_path %></li>
    <% else %>
      <li><%= link_to "Login", login_path %></li>
    <% end %>
  </ul>
</div>
