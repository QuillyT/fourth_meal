<% if user_signed_in? %>
  <li><%= link_to "Logout", logout_path %></li>

  <li><%= link_to "Request to create a new restaurant", new_restaurant_path %></li>
<% else %>
  <li><%= link_to "Login", login_path %></li>
<% end %>


<h1>Restaurant Index</h1>
List of the restaurants [<%= @restaurants.count %>]

<table>
  <th>Name</th>
  <th>Description</th>
  <th>Status</th>
  <th></th>
  <th></th>
  <th>Display</th>
  <th></th>
  <th></th>
  <% @restaurants.each do |restaurant| %>
    <tr>
      <td><%= restaurant.name %></td>
      <td><%= restaurant.description %></td>

      <td><%= restaurant.status %></td>
      <td><%= link_to 'Approve', restaurant_path(restaurant, :status => "approved"), :method => :put %></td>
      <td><%= link_to 'Reject', restaurant_path(restaurant, :status => "rejected"), :method => :put %></td>

      <td><%= restaurant.display %></td>
      <td><%= link_to 'Show', restaurant_path(restaurant, :display => true), :method => :put %></td>
      <td><%= link_to 'Hide', restaurant_path(restaurant, :display => false), :method => :put%></td>

      <!-- link_to("Unlink your facebook account", user_path(@user, :facebook_uid => nil), :method => :put, :confirm => "Are you sure?") -->

    </tr>
  <% end %>
</table>
