<div id="wrapper">

  <!-- Sidebar -->
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "KNIFE & FORK", root_path, {class: "navbar-brand"} %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav side-nav">
        <li><%= link_to "Dashboard", admin_path %><i class="fa fa-dashboard"></i></li>
        <li><%= link_to "All Orders", admin_orders_path %><i class="fa fa-bar-chart-o"></i></li>
        <li><%= link_to "Edit Menu", admin_items_path %><i class="fa fa-table"></i></li>
        <li class="active"><%= link_to "Create New Item", new_admin_item_path %><i class="fa fa-edit"></i></li>
      </ul>

      <ul class="nav navbar-nav navbar-right navbar-user">
        
        <li class="dropdown user-dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <%= current_user.name %> <b class="caret"></b></a>
          <ul class="dropdown-menu">
            
            <li class="divider"></li>
            <li>
              
                  <%= link_to "logout", logout_path, id: "logout" %>
              

            </li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </nav>

  <div id="page-wrapper">

    <div class="row">
      <div class="col-lg-12">
        <h1>Create New Item <small>add new menu items</small></h1>
        <ol class="breadcrumb">
          <li class="active"><i class="fa fa-dashboard"></i> Dashboard</li>
        </ol>
        
      </div>
    </div><!-- /.row -->
    <%= form_for(@item) do |f| %>
      <ul>
      <% @item.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
      </ul>
      <p>
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :description %><br />
        <%= f.text_area :description %>
      </p>
      <p>
        <%= f.label :price %><br />
        <%= f.text_area :price %>
      </p>
      <p>
        <%= f.label :category_id %><br />
        <%= f.text_area :category_id %>
      </p>
      <p>
        <%= f.label :image, "Attach an Image" %><br />
        <%= f.file_field :image %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <% end %>

  </div><!-- /#page-wrapper -->

</div><!-- /#wrapper -->
