<div class="container">
  <div id="wrapper">

    <%= render partial: "layouts/restaurant_admin_navbar" %>

    <div id="page-wrapper">

      <div class="row">
        <div class="col-lg-12">
          <h1>Create New Item <small>add new menu items</small></h1>
          <ol class="breadcrumb">
            <li class="active"><i class="fa fa-dashboard"></i> Dashboard</li>
          </ol>

        </div>
      </div><!-- /.row -->

      <%= form_for(@item) do |f| %>
        <ul>
        <% @item.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
        </ul>
        <p>
          <%= f.label :name %><br />
          <%= f.text_field :name %>
        </p>
        <p>
          <%= f.label :description %><br />
          <%= f.text_area :description %>
        </p>
        <p>
          <%= f.label :price %><br />
          <%= f.text_area :price %>
        </p>
        <p>
          <%= f.label :category_id %><br />
          <%= f.text_area :category_id %>
        </p>
        <p>
          <%= f.label :image, "Attach an Image" %><br />
          <%= f.file_field :image %>
        </p>
        <p>
          <%= f.submit %>
        </p>
      <% end %>

    </div><!-- /#page-wrapper -->

  </div><!-- /#wrapper -->
</div>
