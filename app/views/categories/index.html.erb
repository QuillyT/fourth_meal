

    


    <div class="container">

      <div class="masthead">
        <h3 class="text-muted">Billy's BBQ Shack</h3>
        <ul class="nav nav-justified">
          <li><%= link_to "Home", front_path %></li>
          <li class="active"><%= link_to "Menu", categories_path %></li>
          <li><%= link_to "My Orders", orders_path %></li>
          <li><%= link_to "Cart", cart_path %></li>
          <li><%= link_to "Admin", admin_path %></li>
          <% if current_user %>
          <li><%= link_to "Logout", logout_path %></li>
          <% else %>
          <li><%= link_to "Login", login_path %></li>
          <% end %>
        </ul>
      </div>

      <!-- Jumbotron -->
      <div class="jumbotron">
        <h1>Marketing stuff!</h1>
        <p class="lead">Cras justo odio, dapibus ac facilisis in, egestas eget quam. Fusce dapibus, tellus ac cursus commodo, tortor mauris condimentum nibh, ut fermentum massa justo sit amet.</p>
        <p><a class="btn btn-lg btn-success" href="#" role="button">Get started today</a></p>
      </div>

      <!-- Example row of columns -->
      <div class="container-fluid" id="gridInContainer">
        <% @categories.each do |category| %>
        <h2><%= category.name %></h2>
          <div class="row">
            
              <% category.items.each do |item| %>
                <div class="col-lg-4">
                  <h3><%= item.name %></h3>
                    
                  <p><%= item.description %></p>
                  <p>Price: <%= number_to_currency(item.price) %></p>
                  <%= form_for(OrderItem.new) do |f| %>
                    Quantity: <%= f.select 'quantity', options_for_select(1..20) %>
                    <%= f.hidden_field :item_id, { :value => item.id } %>
                    <%= f.submit "Add to Cart" %>
                    <% end %>
                </div> <!-- closing div col -->
              <% end %>
              
          </div> <!-- closing row -->
        <% end %>
      </div>

      

     

    </div> <!-- /container -->


  

 
